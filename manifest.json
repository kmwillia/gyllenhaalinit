{
    "manifest_version": 2,
    "name": "Gyllenhaalin' it",
    "version": "1.0.0",
    "description": "Corrects Gyllenhaal misspellings across the internet",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/main.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage"
    ]
}
